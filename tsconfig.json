{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		// "allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,

		"outDir": "dist",
		"declaration": true,
		"paths": {
			"vue3-apexcharts": [
				"./node_modules/vue3-apexcharts/typings/vue-apexcharts.d.ts"
			]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"src/assets/**/*.{jpg,png,gif,svg}",
		"node_modules/vue3-apexcharts/src/vue-apexcharts.d.ts"
	],
	"exclude": ["src/App.vue", "src/main.ts"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
